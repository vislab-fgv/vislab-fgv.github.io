---
import PublicationCard from "./PublicationCard.astro";
import publications from "../data/dummy.json";
import NewsItem from "./NewsItem.astro";
---

<div class="flex justify-center">
  <div class="max-w-4xl w-full">
    <div class="px-2 py-8 max-w-6xl">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Publications -->
        <div class="w-full">
          <h2 class="text-xl font-semibold pb-6">
            Recent Publications
            <a href="#" class="hover:text-orange-500 hover:underline font-thin text-sm"
              >(VIEW ALL PAPERS)</a
            >
          </h2>
          <div class="space-y-2">
            {
              publications.publications.map((pub) => (
                <PublicationCard {...pub} />
              ))
            }
          </div>
        </div>

        <!-- News -->
        <div class="w-full lg:w-1/8 pt-3">
          <h2 class="text-xl font-semibold pb-6">News</h2>
          <div>
            {publications.news.map((item) => <NewsItem {...item} />)}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

