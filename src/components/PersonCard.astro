---
interface Props {
  image?: string;
  name: string;
  position: string;
  interests?: string;
  url?: string;
  affiliation?: string;
  alumni_position?: string;
}

const { image, name, position, interests, url, affiliation, alumni_position } =
  Astro.props;
const defaultImage = "/images/people/picture.png";
---

<div class="flex flex-col items-center text-center p-4">
  <img
    src={image || defaultImage}
    alt={name}
    class="w-32 h-32 rounded-full object-cover mb-4"
  />
  <h3 class="font-semibold text-lg mb-1">
    {
      url ? (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-blue-600"
        >
          {name}
        </a>
      ) : (
        name
      )
    }
  </h3>
  <p class="text-gray-600 text-sm mb-2">{position}</p>
  {affiliation && <p class="text-gray-500 text-sm mb-2">{affiliation}</p>}
  {interests && <p class="text-gray-500 text-sm italic">{interests}</p>}
  {alumni_position && <p class="text-gray-500 text-sm">{alumni_position}</p>}
</div>
